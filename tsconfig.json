{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "es6",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
